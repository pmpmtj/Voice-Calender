{
    "archiving": {
        "enabled": true,
        "archive_directory": "processed",
        "delete_source_after_archive": true,
        "rename_pattern": null,
        "handle_duplicates": true
    },
    "logging": {
        "level": "INFO",
        "log_file": "file_archiver.log",
        "max_size_bytes": 1048576,
        "backup_count": 3,
        "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
    },
    "validation": {
        "check_source_exists": true,
        "ensure_destination_exists": true,
        "verify_archive_success": true
    }
} 